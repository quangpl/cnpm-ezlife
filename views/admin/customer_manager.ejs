<script>
    $("#btn-customer").click(function (e) {
        e.preventDefault();
        $.post(`/admin/customer/debt`, {
            customerId: $('#customerId').val(),
            debtMoney: $('#debtMoney').val()
        }, function (result) {
            if (result.success == true) {
                Swal.fire({
                    type: 'success',
                    title: 'Done',
                    text: 'You have been update completely'
                })
                location.reload();

            } else {
                Swal.fire({
                    type: 'error',
                    title: 'Error',
                    text: 'Something went wrong'
                })
            }

        });
    });

    function editCustomer(element) {
        let customerID = $(element).attr("data-id");
        $.get(`/admin/customer/${customerID}`, function (result) {
            if (result) {
                $('#customerId').val(result.customer._id);
                $('#customerName').val(result.customer.name);
                $('#phone').val(result.customer.phone);
                $('#address').val(result.customer.address);
                $('#email').val(result.customer.email);
                $('#debtMoney').val(result.customer.debtMoney);

            } else {
                Swal.fire({
                    type: 'error',
                    title: 'Error',
                    text: 'Something went wrong'
                })
            }

        });
    }

    function deleteCustomer(element) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            console.log(result)
            if (result.value) {
                {
                    $.post('/admin/customer/delete', {
                        customerId: $(element).attr("data-id")
                    }, function (result) {
                        if (result.success === true) {
                            Swal.fire({
                                type: 'success',
                                title: 'Done',
                                text: 'You have been delete completely'
                            })
                            location.reload();
                        } else {
                            Swal.fire({
                                type: 'error',
                                title: 'Error',
                                text: 'Your input is not valid'
                            })
                        }

                    });
                }
            }
        })
    }
</script>