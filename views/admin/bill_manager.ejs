                                    <h5 class="card-header">Recent Orders</h5>
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead class="bg-light">
                                                    <tr class="border-0">
                                                        <th class="border-0">ID</th>
                                                        <th class="border-0">Book</th>
                                                        <th class="border-0">Customer Id</th>
                                                        <th class="border-0">Employee Id</th>
                                                        <th class="border-0">Value</th>
                                                        <th class="border-0">Is Paid</th>
                                                        <th class="border-0">Pay</th>
                                                        <th class="border-0">Delete</th>
                                                        <th class="border-0">View</th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    <% bills.forEach((e)=>{ %>
                                                    <tr>
                                                        <td><%= e._id %></td>
                                                        <td><%= e.books.length %></td>
                                                        <td><%= e.customerId %></td>
                                                        <td><%= e.employeeId %></td>
                                                        <td><%= e.value %></td>
                                                        <td><%= e.isPaid %></td>
                                                        <%if(e.isPaid==false){%>
                                                        <td><i data-id="<%= e._id %>" onclick="payBill(this)"
                                                                class="fa fa-check-circle button-edit"></i>
                                                        </td>
                                                        <%}else {%>
                                                        <td>
                                                            <span>Paid</span></td>
                                                        <% }%>
                                                        <td><i data-id="<%= e._id %>" onclick="deleteBill(this)"
                                                                class="fa fa-trash button-delete"></i>
                                                        </td>
                                                        <td><i data-id="<%= e._id %>" onclick="viewBill(this)"
                                                                class="fa fa-eye button-edit"></i>
                                                        </td>


                                                    </tr>
                                                    <% }) %>

