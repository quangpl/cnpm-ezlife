<script>
    function viewBill(element) {
        let billId = $(element).attr("data-id");
        $.get(`/admin/bill/${billId}`, function (result) {
            if (result) {
                $('#customerId').val(result.bill.customerId);
                $('#employeeId').val(result.bill.employeeId);
                $('#value').val(result.bill.value);
                $('#books').val(result.bill.books);
            } else {
                Swal.fire({
                    type: 'error',
                    title: 'Error',
                    text: 'Something went wrong'
                })
            }
        });
    }

    function deleteBill(element) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            console.log(result)
            if (result.value) {
                {
                    $.post('/admin/bill/delete', {
                        billId: $(element).attr("data-id")
                    }, function (result) {
                        if (result.success === true) {
                            Swal.fire({
                                type: 'success',
                                title: 'Done',
                                text: 'You have been delete completely'
                            })
                            console.log('post success')
                            location.reload();
                        } else {
                            Swal.fire({
                                type: 'error',
                                title: 'Error',
                                text: 'Your input is not valid'
                            })
                        }

                    });
                }
            }
        })
    }
</script>